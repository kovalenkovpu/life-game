{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "airbnb-base",
        "eslint:recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "import/prefer-default-export": 0,
        "linebreak-style": "off",
        "import/extensions": [
            "error",
            "ignorePackages",
            {
                "js": "never"
            }
        ]
    },
    "settings": {
        "import/resolver": {
            "alias": {
                "map": [
                    [
                        "src",
                        "./src"
                    ]
                ],
                "extensions": [
                    ".js",
                    ".json"
                ]
            }
        }
    }
}